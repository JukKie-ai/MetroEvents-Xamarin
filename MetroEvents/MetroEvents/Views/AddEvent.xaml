<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MetroEvents.Views.AddEvent">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Event Name:" FontSize="Large"/>
                <Entry Placeholder="Enter Event Name" x:Name="entryEName" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Address:" FontSize="Large" />
                <Entry Placeholder="Enter Event Address" x:Name="entryAName" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Date:" FontSize="Large" />
                <Entry Placeholder="Enter Event Date" x:Name="entryDName" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <Button Text="Add Event" Clicked="AddEvent_Clicked"  HorizontalOptions="Center"></Button>
            <Button Text="Back" Clicked="GoBack_Clicked"  HorizontalOptions="Center"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>