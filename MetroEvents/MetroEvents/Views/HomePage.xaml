<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MetroEvents.Views.HomePage"
             Title="Home">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Add Event" Clicked="AddEvent_Clicked"  HorizontalOptions="Center"></Button>
                <Button Text="View Event" Clicked="ViewEvent_Clicked"  HorizontalOptions="Center"></Button>
            </StackLayout>
            <Button Text="Logout" Clicked="Logout_Clicked"  HorizontalOptions="Center"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>